<?xml version="1.0" encoding="UTF-8"?>
<window id="1100">
    <defaultcontrol always="true">100</defaultcontrol>
    <include>Animation_DialogPopupOpenClose</include>
    <coordinates>
        <posx>300</posx>
        <posy>300</posy>
    </coordinates>

    <controls>
      <control type="group">
        <!-- Text field for login -->
        <control type="edit" id="100">
            <label>Login:</label>
            <hinttext>Login name</hinttext>
            <posx>50</posx>
            <posy>50</posy>
            <width>200</width>
            <height>30</height>
        </control>

        <!-- Password field -->
        <control type="edit" id="101">
            <label>Password:</label>
            <hinttext>Password</hinttext>
            <password>true</password> <!-- This hides the text with star characters -->
            <posx>50</posx>
            <posy>100</posy>
            <width>200</width>
            <height>30</height>
        </control>

        <!-- OK button -->
        <control type="button" id="200">
            <label>OK</label>
            <posx>50</posx>
            <posy>150</posy>
            <width>80</width>
            <height>30</height>
        </control>

        <!-- Cancel button -->
        <control type="button" id="201">
            <label>Cancel</label>
            <posx>150</posx>
            <posy>150</posy>
            <width>80</width>
            <height>30</height>
        </control>
      </control>
    </controls>
</window>

